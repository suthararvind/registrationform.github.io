    <body class="bgimg">
    <form action="register" method="post">
    
    <div class="login-dark" style="height: 600px; width:30%; margin:auto;">
		
        <form>
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            
			<label for="name">username</label>
			<div class="form-group">
				<input class="form-control" type="name" name="Username" placeholder="Enter your full name"></div>
            <label for="name">password</label>
			<div class="form-group">	
				<input class="form-control" type="password" name="password" placeholder="create your password"></div>
           <label for="name">confirmpassword</label>
		    <div class="form-group">
				<input class="form-control" type="password" name="confirmpassword" placeholder="confirm password"></div>
           <label for="name">contact</label>
		    <div class="form-group">	
				<input class="form-control" type="number" name="contact" placeholder="Enter your contact number"></div>
          <label for="name">email</label>
		   <div class="form-group">
				<input class="form-control" type="email" name="email" placeholder="Enter your email address"></div>
				
				<div class="form-group">
				<input type="radio" name="gender" value="male"> Male
				<input type="radio" name="gender" value="female"> Female </div>

            <div class="form-group">	
				<button class="btn btn-primary btn-block">Sign up</button>
				</div>
				</form>
    </div>
</form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
